<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_black_plain"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:text="@string/Player1"
            style="@style/textViewText"/>

        <EditText
            android:id="@+id/firstPlayer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="65"
            android:background="@drawable/edit_text_style"
            android:inputType="text"
            android:textColor="@android:color/holo_orange_dark"
            tools:ignore="Autofill"
            android:hint="@string/hint1"
            android:gravity="center"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:text="@string/Player2"
            style="@style/textViewText"/>

        <EditText
            android:id="@+id/secondPlayer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="65"
            android:background="@drawable/edit_text_style"
            android:inputType="text"
            android:textColor="@android:color/holo_orange_dark"
            tools:ignore="Autofill"
            android:hint="@string/hint2"
            android:gravity="center"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">

        <Button
            android:id="@+id/letsPlay"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/letsPlay"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@drawable/lets_play_button"
            android:onClick="startMatch"/>

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:onClick="startMatch"
            android:text="@string/exit"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"/>

    </TableRow>

</TableLayout>